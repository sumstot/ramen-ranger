
<div class="bowl-card mt-5 mb-5">
  <div class="image">
    <%= image_tag (bowl.images[0]), class: "bowl-image"%>
  </div>
  <div class="info-container">
    <div class="px-3 d-flex flex-column justify-content-center align-items-center">
      <div><%= bowl.restaurant.name %></div>
      <div><%= bowl.restaurant.jpn_name %></div>
    </div>
    <div class="mt-2">
      <span class="material-icons-outlined md-18 ps-2">ramen_dining</span><span> : <%= bowl.soup %></span>
    </div>
    <div>
      <span class="material-icons-outlined md-18 ps-2">grade</span><span> : <%= bowl.score %> / 5</span>
    </div>
    <div>
      <span class="material-icons-outlined md-18 ps-2">train</span><span> : <%= bowl.restaurant.station %></span> <span class="material-icons-outlined md-18 ps-2">location_on</span><span> : <%= bowl.restaurant.prefecture %></span>
    </div>
  </div>
</div>
